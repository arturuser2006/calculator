<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"></TextView>

    </ScrollView>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />

    <EditText
        android:paddingHorizontal="10dp"
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/corners1"
        android:editable="false"
        android:hint=""
        android:textAlignment="viewEnd"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"></EditText>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText">

        <Button
            android:id="@+id/button_clear"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="C"
            android:backgroundTint="@color/white"
            android:textColor="@color/orange"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/button_del"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="âŒ«"
            android:backgroundTint="@color/white"
            android:textColor="@color/orange"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/button_percent"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="%"
            android:backgroundTint="@color/white"
            android:textColor="@color/orange"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/button_div"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="/"
            android:backgroundTint="@color/white"
            android:textColor="@color/orange"
            android:textSize="30dp"></Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/button_seven"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="7"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/button_eight"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="8"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/button_nine"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="9"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/button_mul"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="*"
            android:backgroundTint="@color/white"
            android:textColor="@color/orange"
            android:textSize="30dp"></Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/button_four"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="4"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/button_five"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="5"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/button_six"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="6"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/button_minus"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="-"
            android:backgroundTint="@color/white"
            android:textColor="@color/orange"
            android:textSize="30dp"></Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/button_one"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="1"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/button_two"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="2"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/button_three"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="3"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/button_plus"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="+"
            android:backgroundTint="@color/white"
            android:textColor="@color/orange"
            android:textSize="30dp"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <Button
            android:id="@+id/button_empty"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text=""
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/button_zero"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="0"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30dp"></Button>

        <Button
            android:id="@+id/button_dot"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:text="."
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30dp"></Button>

        <Button
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/button_equals"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="="
            android:textSize="30dp"
            android:background="@drawable/corners2"></Button>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>